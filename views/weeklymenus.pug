doctype html 
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet' href='/css/showweeklymenu.css')
        link(rel='stylesheet' href='path/to/font-awesome/css/font-awesome.min.css')
        title WeeklyMenus
    body
        .topnav
            a(href="/") Food🦛Hippo
            a(href='/searchweeklymenu') Search By Area Name
            a(href='/menuoverview') Menus

        .box_container
            each menu in menus
                .box 
                    img.principalimage(src=`../uploads/${menu.avatar}`)
                    p.nametag=`${menu.servicename}`
                    p.typetag=`🍽️: ${menu.typeoffood}`
                    p.pricetag=`💲: ${menu.price}`
                    p.areatag=`📍: ${menu.area}`                    
                    a.mediatag(href=`${menu.link}`) Visit Webpage
                    a.button.submitbutton(href=`/caterpost/${menu.servicename}`)  🥡🥡🥡
        .margin

        

